# LinkedIn Anti-Block Configuration
# Copy this file to .env and adjust values for your server environment

# Basic Rate Limiting
LINKEDIN_BASE_DELAY=8000                    # 8 seconds between requests (increase if blocked)
LINKEDIN_MAX_DELAY=30000                    # Maximum delay during blocking
LINKEDIN_BURST_DELAY=60000                  # Delay after burst limit (1 minute)
LINKEDIN_MAX_REQUESTS_PER_HOUR=10           # Conservative limit for servers

# Browser Session Management
LINKEDIN_SESSION_DURATION=900000            # 15 minutes (15 * 60 * 1000)
LINKEDIN_ROTATE_USER_AGENT=true             # Enable user agent rotation
LINKEDIN_HUMAN_BEHAVIOR=true                # Enable human behavior simulation

# Anti-Block Detection
LINKEDIN_COOLDOWN_PERIOD=300000             # 5 minutes cooldown after blocking
LINKEDIN_MAX_COOLDOWN_PERIOD=3600000        # 1 hour maximum cooldown
LINKEDIN_BACKOFF_MULTIPLIER=2               # Exponential backoff multiplier
LINKEDIN_AUTO_RESET=true                    # Auto-reset after successful requests

# Retry Configuration
LINKEDIN_MAX_ATTEMPTS=3                     # Maximum retry attempts
LINKEDIN_BASE_RETRY_DELAY=1000             # Base retry delay (1 second)
LINKEDIN_RETRY_MULTIPLIER=2                # Retry delay multiplier

# Timeout Configuration
LINKEDIN_NAVIGATION_TIMEOUT=30000          # 30 seconds navigation timeout
LINKEDIN_EXTRACTION_TIMEOUT=45000          # 45 seconds extraction timeout
LINKEDIN_TOTAL_TIMEOUT=240000              # 4 minutes total timeout

# Proxy Configuration (Optional)
# LINKEDIN_PROXIES='[{"id":"proxy1","host":"proxy1.example.com","port":8080,"username":"user","password":"pass","protocol":"http"}]'

# Server Environment Settings
NODE_ENV=production                        # Set to 'production' for server deployment
PORT=3000                                 # Server port

# For Ubuntu Server - aggressive settings if blocking is severe
# LINKEDIN_BASE_DELAY=15000                # 15 seconds between requests
# LINKEDIN_MAX_REQUESTS_PER_HOUR=5         # Very conservative
# LINKEDIN_COOLDOWN_PERIOD=900000          # 15 minutes cooldown
# LINKEDIN_MAX_COOLDOWN_PERIOD=7200000     # 2 hours maximum cooldown

# Memory optimization for servers
PUPPETEER_CACHE_DIR=/tmp/puppeteer_cache   # Cache directory for Puppeteer